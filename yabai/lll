
#
# Displays
#
ctrl - left       : yabai -m display --focus west
ctrl - right      : yabai -m display --focus east

#
# Spaces
#
# Disposition
ctrl - b          : yabai -m space --balance
ctrl - r          : yabai -m space --rotate 270
ctrl - x          : yabai -m space --mirror x-axis
ctrl - y          : yabai -m space --mirror y-axis
ctrl - g          : yabai -m space --toggle padding &&\
                    yabai -m space --toggle gap
# Layouts
ctrl + shift - r  : yabai -m space --layout bsp
ctrl + shift - s  : yabai -m space --layout stack
ctrl + shift - t  : yabai -m space --layout float

# Focus
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9

#
# Windows
#
# Basics
ctrl - e          : yabai -m window --toggle split
ctrl - f          : yabai -m window --toggle zoom-fullscreen
ctrl + shift - f  : yabai -m window --toggle native-fullscreen
ctrl - w          : yabai -m window --close
ctrl - t          : yabai -m window --toggle float &&\
                    yabai -m window --grid 7:7:1:1:5:5
# Focus
ctrl - z          : yabai -m window --focus north
ctrl - s          : yabai -m window --focus south
ctrl - q          : yabai -m window --focus west
ctrl - d          : yabai -m window --focus east
# Move
ctrl + shift - z  : yabai -m window --swap north
ctrl + shift - s  : yabai -m window --swap south
ctrl + shift - q  : yabai -m window --swap west
ctrl + shift - d  : yabai -m window --swap east
# Resize
ctrl - i          : yabai -m window --resize top:0:-20
ctrl - k          : yabai -m window --resize bottom:0:20
ctrl - j          : yabai -m window --resize left:-20:0
ctrl - l          : yabai -m window --resize right:20:0

# Spaces
alt - s           : yabai -m window --space 5
