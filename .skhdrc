# Basics
alt - w             : yabai -m window --close
alt - f             : yabai -m window --toggle zoom-fullscreen
alt + shift - f     : yabai -m window --toggle native-fullscreen
alt - t             : yabai -m window --toggle float &&\
                      yabai -m window --grid 7:7:1:1:5:5\

# Layout
alt + shift - r     : yabai -m space --layout bsp
alt + shift - s     : yabai -m space --layout stack
alt + shift - t     : yabai -m space --layout float
alt - e             : yabai -m window --toggle split

# Padding
alt - g             : yabai -m space --toggle padding &&\
                      yabai -m space --toggle gap
alt - r             : yabai -m space --balance

# Focus
alt - up            : yabai -m window --focus north
alt - down          : yabai -m window --focus south
alt - left          : yabai -m window --focus west
alt - right         : yabai -m window --focus east

# Resize
alt - z             : yabai -m window --resize top:0:-20
alt - s             : yabai -m window --resize bottom:0:20
alt - q             : yabai -m window --resize left:-20:0
alt - d             : yabai -m window --resize right:20:0

# Move
alt + shift - up    : yabai -m window --swap north
alt + shift - down  : yabai -m window --swap south
alt + shift - left  : yabai -m window --swap west
alt + shift - right : yabai -m window --swap east
